.result-block
  margin-top 2rem
  .album-thumb-list
    display flex
    flex-wrap wrap
    .album-thumb
      width 50%
      margin-top 2rem
      padding 0 5px
      text-decoration none
      @media screen and (min-width: 768px)
        width 33.33333%
        padding 0 5px
      @media screen and (min-width: 1024px)
        width 20%
        padding 0 10px
      .image-block,
      p
        &:hover
          cursor pointer
          text-decoration underline
